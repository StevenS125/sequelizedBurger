<h1>Eat the Burgerzzzz!</h1>

<div id="firstone">


<h2>Burgers left to be devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour it!</button>
        </form>

         <form action="/{{this.id}}?_method=DELETE" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">delete the burger!</button>
         </form>


        {{> burgers/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

</div>

<div id="secondOne">

<h2>burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Send it Back!</button>
        </form>

            <form action="/{{this.id}}?_method=DELETE" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">delete the burger!</button>
         </form>


        {{> burgers/delete-burger}}

      </li>
    {{/if}}
  {{/each}}
</ul>

</div>

<div id="formDiv">

<h2>Enter the name of the burger you would like to submit</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="slee">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Send it back
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>

